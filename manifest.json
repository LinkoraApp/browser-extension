{
  "manifest_version": 3,
  "name": "Linkora - Browser Extension",
  "version": "0.1.1",
  "description": "Browser extension support for Linkora.",
  "action": {
    "default_popup": "extension.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{4e3c239b-7f42-4f4e-a8b1-33dc303e97a7}"
    }
  }
}
